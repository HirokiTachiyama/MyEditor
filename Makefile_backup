all: me
	@ cd obj; $(MAKE)


VPATH = src obj include

me: my_editor.o buffer.o main_loop.o
	$(CXX) -o me my_editor.o buffer.o main_loop.o

my_editor.o: my_editor.h my_editor.cpp
	$(CXX) -c my_editor.cpp

main_loop.o: main_loop.cpp
	$(CXX) -c main_loop.cpp

buffer.o: buffer.h buffer.cpp
	$(CXX) -c buffer.cpp

clean:
	rm -f ./me
	rm -f ./*.o
